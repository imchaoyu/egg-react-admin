{
  "name": "egg-react-admin",
  "description": "基于Eggjs和React的后台管理系统",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "install:admin": "cd ./admin && yarn",
    "install:service": "cd ./service && yarn",
    "dev:admin": "cd ./admin && yarn start",
    "dev:service": "cd ./service && yarn dev",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "lint": "umi g tmp && npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./admin/src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./admin/src",
    "lint:prettier": "prettier -c --write \"admin/src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"admin/src/**/*.less\" --syntax less",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@umijs/fabric": "^2.10.2",
    "eslint": "^7.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "stylelint": "13.0.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/imchaoyu/egg-react-admin.git"
  },
  "keywords": [
    "egg",
    "react"
  ],
  "author": "chaoyu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imchaoyu/egg-react-admin/issues"
  },
  "homepage": "https://github.com/imchaoyu/egg-react-admin#readme"
}
